.L_1_HomePageTabs .tab-button,
.sub-tab-buttons .sub-tab-button {
  background: linear-gradient(145deg, #e6e6e6, #ffffff);
  border-radius: 10px;
  box-shadow: 8px 8px 16px #d1d1d1,
              -8px -8px 16px #ffffff;
  padding: 15px 25px;
  margin: 10px;
  font-size: 16px;
  font-weight: 500;
  color: #333;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.L_1_HomePageTabs .tab-button::before,
.sub-tab-buttons .sub-tab-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    45deg,
    rgba(255, 255, 255, 0.1),
    rgba(255, 255, 255, 0.3)
  );
  pointer-events: none;
}

.L_1_HomePageTabs .tab-button:hover,
.sub-tab-buttons .sub-tab-button:hover {
  transform: translateY(-2px);
  box-shadow: 10px 10px 20px #c3c3c3,
              -10px -10px 20px #ffffff;
}

.L_1_HomePageTabs .tab-button:focus,
.sub-tab-buttons .sub-tab-button:focus {
  outline: none;
  box-shadow: 12px 12px 24px #b8b8b8,
              -12px -12px 24px #ffffff;
  transform: translateY(-3px);
}

.L_1_HomePageTabs .tab-button.active,
.sub-tab-buttons .sub-tab-button.active {
  background: linear-gradient(145deg, #ffffff, #f0f0f0);
  box-shadow: inset 4px 4px 8px #d1d1d1,
              inset -4px -4px 8px #ffffff;
  transform: translateY(0);
}

.L_1_HomePageTabs {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15px;
  padding: 20px;
  background: #f8f8f8;
  border-radius: 15px;
  margin-bottom: 20px;
}

.sub-tab-buttons {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 15px;
  padding: 15px;
  margin-bottom: 20px;
}

/* Ensure uniform text size */
.L_1_HomePageTabs .tab-button *,
.sub-tab-buttons .sub-tab-button * {
  font-size: 16px !important;
  line-height: 1.5;
}

/* Sub tabs container */
.sub-tab-button {
  padding: 12px 20px;
  margin: 8px;
  font-size: 14px;
}

/* Remove default button styles */
.tab-button,
.sub-tab-button {
  border: none;
  background-color: transparent;
}
