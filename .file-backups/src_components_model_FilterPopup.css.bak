.filter-popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.filter-popup {
  background: var(--model-color-background);
  border-radius: var(--model-border-radius-lg);
  box-shadow: var(--model-shadow-lg);
  width: 90%;
  max-width: 800px;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
}

.filter-popup-header {
  padding: var(--model-spacing-lg);
  border-bottom: 1px solid var(--model-color-border);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.filter-popup-header h2 {
  margin: 0;
  font-size: var(--model-font-size-xl);
  color: var(--model-color-text);
}

.close-button {
  background: none;
  border: none;
  font-size: 24px;
  color: var(--model-color-text-light);
  cursor: pointer;
  padding: 4px;
  border-radius: 50%;
  transition: all var(--model-transition-fast) ease;
}

.close-button:hover {
  background: var(--model-color-background-hover);
  color: var(--model-color-text);
}

.filter-popup-content {
  padding: var(--model-spacing-lg);
}

/* Presets Section */
.presets-section {
  margin-bottom: var(--model-spacing-xl);
}

.preset-buttons {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--model-spacing-md);
  margin-top: var(--model-spacing-md);
}

.preset-button {
  background: var(--model-color-background-alt);
  border: 1px solid var(--model-color-border);
  border-radius: var(--model-border-radius-md);
  padding: var(--model-spacing-md);
  cursor: pointer;
  transition: all var(--model-transition-medium) ease;
  text-align: left;
}

.preset-button.active {
  background: var(--model-color-primary-light);
  border-color: var(--model-color-primary);
}

.preset-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--model-spacing-sm);
}

.preset-name {
  font-weight: 600;
  color: var(--model-color-text);
}

.preset-departure {
  font-size: var(--model-font-size-sm);
  color: var(--model-color-text-light);
}

.preset-description {
  font-size: var(--model-font-size-sm);
  color: var(--model-color-text-light);
}

/* Filter Section */
.filter-section {
  margin-bottom: var(--model-spacing-xl);
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: var(--model-spacing-md);
}

.filter-option-container {
  background: var(--model-color-background-alt);
  border-radius: var(--model-border-radius-md);
  padding: var(--model-spacing-md);
}

.filter-option {
  display: flex;
  align-items: flex-start;
  gap: var(--model-spacing-md);
  cursor: pointer;
}

.filter-checkbox {
  position: relative;
  width: 20px;
  height: 20px;
}

.filter-checkbox input {
  opacity: 0;
  position: absolute;
}

.checkbox-custom {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 2px solid var(--model-color-border);
  border-radius: 4px;
  transition: all var(--model-transition-fast) ease;
}

.filter-checkbox input:checked + .checkbox-custom {
  background: var(--model-color-primary);
  border-color: var(--model-color-primary);
}

.filter-checkbox input:checked + .checkbox-custom::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  width: 4px;
  height: 8px;
  border: solid white;
  border-width: 0 2px 2px 0;
}

.filter-info {
  flex: 1;
}

.filter-title {
  display: block;
  font-weight: 600;
  color: var(--model-color-text);
  margin-bottom: 4px;
}

.filter-description {
  display: block;
  font-size: var(--model-font-size-sm);
  color: var(--model-color-text-light);
}

.filter-details {
  margin-top: var(--model-spacing-md);
  padding-left: calc(20px + var(--model-spacing-md));
}

.filter-items {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--model-spacing-sm);
}

.filter-item {
  display: flex;
  align-items: center;
  gap: var(--model-spacing-sm);
  font-size: var(--model-font-size-sm);
  color: var(--model-color-text-light);
}

/* Inheritance Section */
.inheritance-section {
  margin-bottom: var(--model-spacing-xl);
}

.departure-control {
  margin-bottom: var(--model-spacing-lg);
}

.departure-label {
  display: block;
  margin-bottom: var(--model-spacing-md);
  font-weight: 500;
}

.departure-input-group {
  display: flex;
  align-items: center;
  gap: var(--model-spacing-sm);
  margin-top: var(--model-spacing-sm);
}

.departure-input-group input {
  width: 80px;
  padding: 6px;
  border: 1px solid var(--model-color-border);
  border-radius: var(--model-border-radius-sm);
}

.departure-unit {
  color: var(--model-color-text-light);
}

.departure-slider {
  position: relative;
  padding: var(--model-spacing-sm) 0;
}

.departure-slider input[type="range"] {
  width: 100%;
  margin: var(--model-spacing-sm) 0;
}

.departure-markers {
  display: flex;
  justify-content: space-between;
  color: var(--model-color-text-light);
  font-size: var(--model-font-size-sm);
}

.priority-control {
  margin-top: var(--model-spacing-lg);
}

.priority-description {
  margin-bottom: var(--model-spacing-md);
  font-size: var(--model-font-size-sm);
  color: var(--model-color-text-light);
}

.priority-description ul {
  margin-top: var(--model-spacing-sm);
  padding-left: var(--model-spacing-lg);
}

.priority-buttons {
  display: flex;
  gap: var(--model-spacing-md);
}

.priority-button {
  flex: 1;
  padding: var(--model-spacing-md);
  border: 1px solid var(--model-color-border);
  border-radius: var(--model-border-radius-md);
  background: var(--model-color-background-alt);
  cursor: pointer;
  transition: all var(--model-transition-medium) ease;
  display: flex;
  align-items: center;
  gap: var(--model-spacing-sm);
}

.priority-button.active {
  background: var(--model-color-primary-light);
  border-color: var(--model-color-primary);
}

.priority-button.high { border-left: 4px solid #22c55e; }
.priority-button.medium { border-left: 4px solid #f59e0b; }
.priority-button.low { border-left: 4px solid #ef4444; }

/* Footer */
.filter-popup-footer {
  padding: var(--model-spacing-lg);
  border-top: 1px solid var(--model-color-border);
  display: flex;
  justify-content: flex-end;
  gap: var(--model-spacing-md);
  background: var(--model-color-background-alt);
}

.preset-indicator {
  margin-right: auto;
  color: var(--model-color-text-light);
  font-size: var(--model-font-size-sm);
}

.cancel-button,
.save-button {
  padding: var(--model-spacing-sm) var(--model-spacing-lg);
  border-radius: var(--model-border-radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--model-transition-fast) ease;
}

.cancel-button {
  background: var(--model-color-background);
  border: 1px solid var(--model-color-border);
  color: var(--model-color-text);
}

.save-button {
  background: var(--model-color-primary);
  border: 1px solid var(--model-color-primary);
  color: white;
}

.cancel-button:hover {
  background: var(--model-color-background-hover);
}

.save-button:hover {
  background: var(--model-color-primary-dark);
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .filter-popup {
    background: var(--model-color-background-dark);
  }

  .preset-button,
  .filter-option-container {
    background: var(--model-color-background-alt-dark);
  }

  .priority-button {
    background: var(--model-color-background-alt-dark);
  }

  .filter-popup-footer {
    background: var(--model-color-background-alt-dark);
  }
}
