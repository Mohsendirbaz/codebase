.optimization-engine {
  padding: var(--model-spacing-lg);
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: var(--model-spacing-lg);
}

.optimization-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: var(--model-spacing-md);
  border-bottom: 1px solid var(--model-color-border);
}

.optimization-header h2 {
  margin: 0;
  color: var(--model-color-text);
  font-size: var(--model-font-size-xl);
}

.optimization-type-toggle {
  display: flex;
  gap: var(--model-spacing-sm);
  padding: 4px;
  background: var(--model-color-background-alt);
  border-radius: var(--model-border-radius-lg);
}

.toggle-button {
  padding: var(--model-spacing-sm) var(--model-spacing-md);
  border: none;
  background: none;
  color: var(--model-color-text-light);
  font-size: var(--model-font-size-sm);
  border-radius: var(--model-border-radius-md);
  cursor: pointer;
  transition: all var(--model-transition-fast) ease;
}

.toggle-button.active {
  background: var(--model-color-primary);
  color: white;
}

.optimization-content {
  display: grid;
  grid-template-columns: 300px 1fr;
  gap: var(--model-spacing-lg);
  align-items: start;
}

/* Controls Panel */
.optimization-controls {
  background: var(--model-color-background-alt);
  border-radius: var(--model-border-radius-lg);
  padding: var(--model-spacing-lg);
  display: flex;
  flex-direction: column;
  gap: var(--model-spacing-xl);
}

.objective-function,
.constraint-controls,
.algorithm-controls {
  display: flex;
  flex-direction: column;
  gap: var(--model-spacing-md);
}

.objective-function h3,
.constraint-controls h3,
.algorithm-controls h3 {
  margin: 0;
  color: var(--model-color-text);
  font-size: var(--model-font-size-lg);
}

.objective-function select {
  padding: var(--model-spacing-sm);
  border: 1px solid var(--model-color-border);
  border-radius: var(--model-border-radius-sm);
  background: var(--model-color-background);
  color: var(--model-color-text);
  font-size: var(--model-font-size-sm);
  cursor: pointer;
}

.constraint-grid,
.param-grid {
  display: grid;
  gap: var(--model-spacing-md);
}

.constraint-item,
.param-item {
  display: flex;
  flex-direction: column;
  gap: var(--model-spacing-sm);
}

.constraint-item label,
.param-item label {
  color: var(--model-color-text-light);
  font-size: var(--model-font-size-sm);
}

.constraint-item input,
.param-item input {
  padding: var(--model-spacing-sm);
  border: 1px solid var(--model-color-border);
  border-radius: var(--model-border-radius-sm);
  background: var(--model-color-background);
  color: var(--model-color-text);
  font-size: var(--model-font-size-sm);
}

/* Results Panel */
.results-panel {
  background: var(--model-color-background-alt);
  border-radius: var(--model-border-radius-lg);
  padding: var(--model-spacing-lg);
  min-height: 600px;
  display: flex;
  flex-direction: column;
}

.optimizing-indicator {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--model-spacing-md);
}

.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid var(--model-color-border);
  border-top-color: var(--model-color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Best Solution Display */
.best-solution {
  background: var(--model-color-background);
  border-radius: var(--model-border-radius-lg);
  padding: var(--model-spacing-lg);
  margin-bottom: var(--model-spacing-lg);
}

.best-solution h3 {
  margin: 0 0 var(--model-spacing-md);
  color: var(--model-color-text);
  font-size: var(--model-font-size-lg);
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--model-spacing-md);
}

.metric-item {
  display: flex;
  flex-direction: column;
  gap: var(--model-spacing-xs);
  padding: var(--model-spacing-md);
  background: var(--model-color-background-alt);
  border-radius: var(--model-border-radius-md);
}

.metric-item label {
  color: var(--model-color-text-light);
  font-size: var(--model-font-size-sm);
}

.metric-item span {
  color: var(--model-color-text);
  font-size: var(--model-font-size-lg);
  font-weight: 500;
}

/* Solution Distribution */
.solution-distribution {
  background: var(--model-color-background);
  border-radius: var(--model-border-radius-lg);
  padding: var(--model-spacing-lg);
}

.solution-distribution h3 {
  margin: 0 0 var(--model-spacing-lg);
  color: var(--model-color-text);
  font-size: var(--model-font-size-lg);
}

.chart-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: var(--model-spacing-lg);
}

.chart-container {
  background: var(--model-color-background-alt);
  border-radius: var(--model-border-radius-md);
  padding: var(--model-spacing-md);
}

.chart-container h4 {
  margin: 0 0 var(--model-spacing-md);
  color: var(--model-color-text);
  font-size: var(--model-font-size-md);
}

/* Action Buttons */
.optimization-actions {
  display: flex;
  gap: var(--model-spacing-md);
  margin-top: var(--model-spacing-lg);
  padding-top: var(--model-spacing-lg);
  border-top: 1px solid var(--model-color-border);
}

.optimize-button,
.apply-button {
  padding: var(--model-spacing-sm) var(--model-spacing-lg);
  border: none;
  border-radius: var(--model-border-radius-md);
  font-weight: 500;
  cursor: pointer;
  transition: all var(--model-transition-fast) ease;
}

.optimize-button {
  background: var(--model-color-primary);
  color: white;
}

.optimize-button:hover {
  background: var(--model-color-primary-dark);
  transform: translateY(-2px);
}

.apply-button {
  background: var(--model-color-success);
  color: white;
}

.apply-button:hover {
  background: var(--model-color-success-dark);
  transform: translateY(-2px);
}

/* Empty State */
.no-solutions {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--model-spacing-lg);
  color: var(--model-color-text-light);
  text-align: center;
}

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
  .optimization-controls,
  .results-panel {
    background: var(--model-color-background-alt-dark);
  }

  .best-solution,
  .solution-distribution {
    background: var(--model-color-background-dark);
  }

  .metric-item,
  .chart-container {
    background: var(--model-color-background-dark);
  }

  .objective-function select,
  .constraint-item input,
  .param-item input {
    background: var(--model-color-background-dark);
    border-color: var(--model-color-border-dark);
  }
}

/* Responsive Adjustments */
@media (max-width: 1024px) {
  .optimization-content {
    grid-template-columns: 1fr;
  }

  .optimization-controls {
    position: sticky;
    top: 0;
    z-index: 1;
  }

  .chart-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .optimization-header {
    flex-direction: column;
    align-items: stretch;
    gap: var(--model-spacing-md);
  }

  .optimization-type-toggle {
    flex-direction: column;
  }

  .metrics-grid {
    grid-template-columns: 1fr;
  }

  .optimization-actions {
    flex-direction: column;
  }
}

/* Focus States */
.objective-function select:focus,
.constraint-item input:focus,
.param-item input:focus {
  outline: none;
  border-color: var(--model-color-primary);
  box-shadow: 0 0 0 2px var(--model-color-primary-light);
}

/* Animation States */
.metric-item {
  transition: transform var(--model-transition-medium) ease,
              box-shadow var(--model-transition-medium) ease;
}

.metric-item:hover {
  transform: translateY(-2px);
  box-shadow: var(--model-shadow-md);
}

.chart-container {
  transition: transform var(--model-transition-medium) ease;
}

.chart-container:hover {
  transform: scale(1.02);
}
