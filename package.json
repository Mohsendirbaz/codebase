{
  "name": "tea-space-anim",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "render:frames": "node scripts/render-ladder-anim.js",
    "make:video": "ffmpeg -y -framerate 30 -i frames/frame_%03d.png -c:v libx264 -pix_fmt yuv420p -movflags +faststart assets/why/ladder.mp4",
    "make:gif": "ffmpeg -y -framerate 15 -i frames/frame_%03d.png -vf \"scale=1200:-1:flags=lanczos,split[s0][s1];[s0]palettegen=stats_mode=diff[p];[s1][p]paletteuse=new=1\" -loop 0 assets/why/ladder.gif",
    "build:anim": "npm run render:frames && npm run make:video && npm run make:gif"
  },
  "dependencies": {
    "puppeteer": "^22.15.0"
  }
}