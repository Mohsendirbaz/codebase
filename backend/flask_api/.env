# Flask Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5050

# Security
SECRET_KEY=development-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# WebSocket Configuration
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=60
WS_MAX_CONNECTIONS=100
WS_MAX_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=5000

# Analysis Configuration
ANALYSIS_TIMEOUT=300  # 5 minutes
MAX_CONCURRENT_ANALYSES=10
BATCH_SIZE=100
CACHE_DURATION=3600  # 1 hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/flask_api.log
LOG_MAX_BYTES=1048576  # 1MB
LOG_BACKUP_COUNT=10

# Performance
WORKER_THREADS=4
ANALYSIS_CHUNK_SIZE=1000
MAX_PAYLOAD_SIZE=10485760  # 10MB

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100  # requests per minute
RATE_LIMIT_WEBSOCKET=60  # connections per minute

# Error Handling
MAX_RETRIES=3
RETRY_DELAY=1000  # milliseconds
ERROR_REPORTING_EMAIL=admin@example.com

# Monitoring
ENABLE_PERFORMANCE_MONITORING=True
ENABLE_ERROR_TRACKING=True
METRICS_COLLECTION_INTERVAL=60  # seconds

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=modelzone_

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=csv,json,xlsx

# API Versioning
API_VERSION=v1
ENABLE_LEGACY_ENDPOINTS=False

# Documentation
SWAGGER_UI_ENABLED=True
API_TITLE="Model Zone API"
API_DESCRIPTION="Real-time analysis API for Model Zone application"

# Development Tools
ENABLE_DEBUG_TOOLBAR=True
PROFILE_REQUESTS=True
EXPLAIN_TEMPLATE_LOADING=True

# Testing
TEST_DATABASE_URI=sqlite:///test.db
TESTING=False
PRESERVE_CONTEXT_ON_EXCEPTION=False
